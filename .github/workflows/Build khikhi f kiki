name: Build Android APK (Rescue Kotlin Native)

on:
  push:
    branches: [ main ]
  workflow_dispatch: # Déclenchement manuel depuis ton mobile

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: 1. Checkout Code
        uses: actions/checkout@v4

      - name: 2. Setup Java 17 (Temurin)
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '17'

      - name: 3. Setup Android SDK
        uses: android-actions/setup-android@v3

      - name: 4. Get Date for Versioning
        id: date
        run: echo "date=$(date +'%Y-%m-%d_%Hh%M')" >> $GITHUB_OUTPUT

      - name: 5. Configuration des Clés (Rescue Mode)
        run: |
          chmod +x gradlew
          echo "SUPABASE_URL=https://placeholder.supabase.co" >> local.properties
          echo "SUPABASE_ANON_KEY=placeholder_key" >> local.properties

      - name: 6. Compilation APK Debug (Kotlin Natif)
        run: ./gradlew assembleDebug

      - name: 7. Nommage de l'Artéfact
        run: |
          mv app/build/outputs/apk/debug/app-debug.apk app/build/outputs/apk/debug/Amandier_NATIVE_DEBUG_${{ steps.date.outputs.date }}.apk

      - name: 8. Téléchargement de l'APK
        uses: actions/upload-artifact@v4
        with:
          name: APK_Amandier_Native_${{ steps.date.outputs.date }}
          path: app/build/outputs/apk/debug/Amandier_NATIVE_DEBUG_${{ steps.date.outputs.date }}.apk
          retention-days: 5
