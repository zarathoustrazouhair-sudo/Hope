name: Build Android APK (Kotlin Native)

on:
  push:
    branches: [ main, master ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: 1. Extraction du code source
        uses: actions/checkout@v4

      - name: 2. Configuration de l'environnement Java
        uses: actions/setup-java@v4
        with:
          distribution: 'zulu'
          java-version: '17'

      - name: 3. Initialisation de Gradle
        uses: gradle/actions/setup-gradle@v3

      - name: 4. Autorisation d'exécution du script Gradle
        run: chmod +x gradlew

      - name: 5. Forge de l'APK (Mode Debug)
        run: ./gradlew assembleDebug

      - name: 6. Génération de l'horodatage
        id: timestamp
        run: echo "date=$(date +'%Y-%m-%d_%Hh%M')" >> $GITHUB_OUTPUT

      - name: 7. Renommage et Organisation
        run: |
          mkdir -p output_apk
          cp app/build/outputs/apk/debug/app-debug.apk output_apk/Amandier_${{ steps.timestamp.outputs.date }}.apk

      - name: 8. Expédition de l'APK vers GitHub (Artifacts)
        uses: actions/upload-artifact@v4
        with:
          name: APK_Amandier_${{ steps.timestamp.outputs.date }}
          path: output_apk/Amandier_${{ steps.timestamp.outputs.date }}.apk
          retention-days: 5
